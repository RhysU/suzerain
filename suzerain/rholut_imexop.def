// #include-time parameters available followed by a sample usage.
// Each of these are #undef-ed at the end of this template file
//
// #define FUNCNAME() /* Function name, e.g. suzerain_rholut_imexop_packc */
// #define PACK(x)    /* suzerain_bsmbsm_ ## x ## pack{c,f}               */

void
FUNCNAME()(
        const double phi,
        const double km,
        const double kn,
        const suzerain_rholut_imexop_scenario * const s,
        const suzerain_rholut_imexop_ref      * const r,
        const suzerain_rholut_imexop_refld    * const ld,
        const suzerain_bsplineop_workspace    * const w,
        const int rho,
        const int rhou,
        const int rhov,
        const int rhow,
        const int rhoe,
        complex_double * const buf,
        suzerain_bsmbsm * const A,
        complex_double * const papt)
{
    // How many rows and columns of banded submatrices will we build?
    const int nneg = (rho  >= 0)
                   + (rhou >= 0) + (rhov >= 0) + (rhow >= 0)
                   + (rhoe >= 0);

    // Compute the BSMBSM structure and named max_kl, max_ku views of w->D.
    *A = suzerain_bsmbsm_construct(nneg, w->n, w->max_kl, w->max_ku);
    const double * const M  = w->D[0] - (w->max_ku - w->ku[0]);
    const double * const D1 = w->D[1] - (w->max_ku - w->ku[1]);
    const double * const D2 = w->D[2] - (w->max_ku - w->ku[1]);
    assert(w->nderiv >= 2);         // Enough derivatives in workspace?
    assert(A->ld == w->ld);         // Compatible storage?

    // Prepare shorthand for some useful derived values
    const complex_double ikm = _Complex_I*km;
    const complex_double ikn = _Complex_I*kn;
    const double km2         = km*km;
    const double kn2         = kn*kn;
    const double gm1         = s->gamma - 1;
    const double ap43        = s->alpha + 4.0/3.0;
    const double ap13        = s->alpha + 1.0/3.0;
    const double Ma2         = s->Ma * s->Ma;
    const double invRe       = 1 / s->Re;
    const double invMa2      = 1 / Ma2;
    const double ginvRePr    = s->gamma / (s->Re * s->Pr);

    // We do not know the leading dimension associated with the definition of
    // PACK() so we must overwrite every possible submatrix within PAPT.
    // This is only suboptimal for the zero (rho, rhoe) submatrix and
    // brings with it much flexibility.

    // Shorthand for the common pattern of providing a r->foo, ld->foo pair.
#   define REF(quantity) r->quantity, ld->quantity
    static const double one = 1.0;
#   define IDENTITY()    &one,        0

    if (rho >= 0) {  // Prepare density row

        PACK(zd)(A, rho,  rho, 1.0, M, papt);

        if (rhou >= 0) PACK(zd)(A, rho, rhou, -ikm*phi, M,  papt);

        if (rhov >= 0) PACK(zd)(A, rho, rhov, -1.0*phi, D1, papt);

        if (rhow >= 0) PACK(zd)(A, rho, rhow, -ikn*phi, M,  papt);

        if (rhoe >= 0) PACK(z)( A, rho,  rhoe,     0.0, 0,  papt);
    }

    // The provided buf may contain INFs or NANs.  Defensively zero it.
    // Also serves to (possibly) bring the buffer into cache for accumulation.
    assert(buf);
    memset(buf, 0, A->ld*A->n*sizeof(buf[0]));

    if (rhou >= 0) { // Prepare streamwise momentum row

        if (rho  >= 0) {
            suzerain_blasext_zgb_dddiag_scale_acc_d(
                    'L', A->n, A->n, A->kl, A->ku,
                    -phi*0.5*gm1*ikm,            REF(m_gradrho),
                     phi*invRe*(ap43*km2 + kn2), REF(nuux),
                    -phi*ap13*invRe*(ikm+ikn),   REF(nuuz),
                    M, 1, w->ld, 0.0, buf, 1, A->ld);

            suzerain_blasext_zgb_diag_scale_acc_d(
                    'L', A->n, A->n, A->kl, A->ku,
                    -phi*ap13*invRe*ikm,         REF(nuuy),
                    D1, 1, w->ld, 1.0, buf, 1, A->ld);

            suzerain_blasext_zgb_diag_scale_acc_d(
                    'L', A->n, A->n, A->kl, A->ku,
                    -phi*invRe,                  REF(nuux),
                    D2, 1, w->ld, 1.0, buf, 1, A->ld);

            PACK(z)(A, rhou, rho, 1.0, buf, papt);
        }

        /* rhou */ {
            suzerain_blasext_zgb_dddiag_scale_acc_d(
                    'L', A->n, A->n, A->kl, A->ku,
                    1.0,                         IDENTITY(),
                    -phi*gm1*ikm,                REF(ux),
                    -phi*invRe*(ap43*km2 + kn2), REF(nu),
                    M, 1, w->ld, 0.0, buf, 1, A->ld);

            suzerain_blasext_zgb_diag_scale_acc_d(
                    'L', A->n, A->n, A->kl, A->ku,
                    phi*invRe,                  REF(nu),
                    D2, 1, w->ld, 1.0, buf, 1, A->ld);

            PACK(z)(A, rhou, rhou, 1.0, buf, papt);
        }

        if (rhov >= 0) {
            suzerain_blasext_zgb_diag_scale_acc_d(
                    'L', A->n, A->n, A->kl, A->ku,
                    -phi*gm1*ikm,       REF(uy),
                    M, 1, w->ld, 0.0, buf, 1, A->ld);

            suzerain_blasext_zgb_diag_scale_acc_d(
                    'L', A->n, A->n, A->kl, A->ku,
                    phi*ap13*invRe*ikm, REF(nu),
                    D1, 1, w->ld, 1.0, buf, 1, A->ld);

            PACK(z)(A, rhou, rhov, 1.0, buf, papt);
        }

        if (rhow >= 0) {
            suzerain_blasext_zgb_ddiag_scale_acc_d(
                    'L', A->n, A->n, A->kl, A->ku,
                    -phi*gm1*ikm,             REF(uz),
                    phi*ap13*invRe*(ikm+ikn), REF(nu),
                    M, 1, w->ld, 0.0, buf, 1, A->ld);

            PACK(z)(A, rhou, rhow, 1.0, buf, papt);
        }

        if (rhoe >= 0) PACK(zd)(A, rhou, rhoe, -gm1*invMa2*ikm*phi, M, papt);
    }

    if (rhov >= 0) { // Prepare wall-normal momentum row

        if (rho  >= 0) PACK(z)(A, rhov, rho,  0.0, NULL, papt);

        if (rhou >= 0) PACK(z)(A, rhov, rhou, 0.0, NULL, papt);

        PACK(zd)(A, rhov, rhov, 1.0, M, papt);

        if (rhow >= 0) PACK(z)(A, rhov, rhow, 0.0, NULL, papt);

        if (rhoe >= 0) PACK(zd)(A, rhov, rhoe, -gm1*invMa2*phi, D1, papt);
    }

    if (rhow >= 0) { // Prepare spanwise momentum row

        if (rho  >= 0) PACK(z)(A, rhow, rho,  0.0, NULL, papt);

        if (rhou >= 0) PACK(z)(A, rhow, rhou, 0.0, NULL, papt);

        if (rhov >= 0) PACK(z)(A, rhow, rhov, 0.0, NULL, papt);

        PACK(zd)(A, rhow, rhow, 1.0, M, papt);

        if (rhoe >= 0) PACK(zd)(A, rhow, rhoe, -gm1*invMa2*ikn*phi, M, papt);

    }

    if (rhoe >= 0) { // Prepare total energy row

        if (rho  >= 0) PACK(z)(A, rhoe, rho,  0.0, NULL, papt);

        if (rhou >= 0) PACK(z)(A, rhoe, rhou, 0.0, NULL, papt);

        if (rhov >= 0) PACK(z)(A, rhoe, rhov, 0.0, NULL, papt);

        if (rhow >= 0) PACK(z)(A, rhoe, rhow, 0.0, NULL, papt);

        PACK(zd)(A, rhoe, rhoe, 1.0, M, papt);
    }

#   undef REF
#   undef IDENTITY

}

#undef FUNCNAME
#undef PACK
