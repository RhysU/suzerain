// #include-time parameters available followed by a sample usage.
// Each of these are #undef-ed at the end of this template file
//
// #define GBIDDMV_STATIC    /*empty*/         /* Use for static function    */
// #define GBIDDMV_FUNCTION  dgbiddmv          /* Function name              */
// #define GBIDDMV_COMPONENT double            /* Type of matrices           */
// #define GBIDDMV_SCALAR    double            /* Type of coeffs and vectors */
// #define GBIDDMV_KL        const int kl,     /* Matrix lower bandwidth     */
// #define GBIDDMV_KU        const int ku,     /* Matrix upper bandwidth     */

#ifndef __GBIDDMV_INTERNAL_ONCE
#define __GBIDDMV_INTERNAL_ONCE
static inline int ndxmin(int a, int b) { return a < b ? a : b; }
static inline int ndxmax(int a, int b) { return a > b ? a : b; }
#endif /* __GBIDDMV_INTERNAL_ONCE */

GBIDDMV_STATIC int GBIDDMV_FUNCTION(
    char trans, const int n, GBIDDMV_KL GBIDDMV_KU
    const GBIDDMV_SCALAR alpha0,
    const GBIDDMV_SCALAR alpha1, const GBIDDMV_COMPONENT * const restrict d1,
    const GBIDDMV_SCALAR alpha2, const GBIDDMV_COMPONENT * const restrict d2,
                                 const GBIDDMV_COMPONENT *       restrict a, int lda,
                                 const    GBIDDMV_SCALAR * const restrict x, const int incx,
    const GBIDDMV_SCALAR beta,            GBIDDMV_SCALAR * const restrict y, const int incy)
{
    // Logic from http://www.netlib.org/blas/dgbmv.f revised
    // for zero-indexed, vectorization-ready code on GCC and Intel.
    // Additional diagonal matrices logic added relative to gbmv.def.

    trans = toupper(trans);  // Simplifies case-insensitive checks

    // Test the input parameters
    if (trans != 'N' && trans != 'T' && trans != 'C') {
        return 1;
    } else if (n < 0) {
        return 2;
    } else if (kl < 0) {
        return 3;
    } else if (ku < 0) {
        return 4;
    } else if (lda <= kl + ku) {
        return 12;
    } else if (incx == 0) {
        return 14;
    } else if (incy == 0) {
        return 17;
    }

    // Quick return if possible
    if (n == 0 || (alpha0 == 0 && alpha1 == 0 && alpha2 == 0 && beta == 1)) {
        return 0;
    }

    // Start the operations. In this version the elements of A are accessed
    // sequentially with one pass through the band part of A.

    // First form y := beta*y (ignoring the irrelevant incy sign)...
    if (beta != 1) {
        const int abs_incy = abs(incy);
        if (abs_incy == 1) {  // ...for contiguous y
            if (beta == 0) {
                memset(y, 0, n*sizeof(y[0]));
            } else {
                for (int i = 0; i < n; ++i) {
                    y[i] *= beta;
                }
            }
        } else {              // ...for strided y
            if (beta == 0) {
#ifdef __INTEL_COMPILER
#pragma unroll
#endif
                for (int i = 0; i < n; ++i) {
                    y[i*abs_incy] = 0;
                }
            } else {
#ifdef __INTEL_COMPILER
#pragma unroll
#endif
                for (int i = 0; i < n; ++i) {
                    y[i*abs_incy] *= beta;
                }
            }
        }
    }

    // Quick return when the matrices used are irrelevant
    if (alpha0 == 0 && alpha1 == 0 && alpha2 == 0) {
        return 0;
    }

    // Set up the start points in x and y.
    int kx = incx > 0 ? 0 : incx*(1 - n);
    int ky = incy > 0 ? 0 : incy*(1 - n);

    // Banded matrix dereference is always of form a[ku + i + j*(lda - 1)].
    // Incorporate the ku offset and decrement lda to speed indexing in loops.
    a += ku;
    --lda;

    // Perform the banded matrix-vector accumulation
    const int klp1 = kl + 1;

    if (trans == 'N') {   // Form y := (alpha0*I+alpha1*D1)*A*x + y...

        int jx = kx;
        if (incy == 1) {  // ...for contiguous y
            for (int j = 0; j < n; ++j) {
                const int il = ndxmax(0, j - ku);
                const int iu = ndxmin(n, j + klp1);
                for (int i = il; i < iu; ++i) {
                    y[i] += (alpha0 + alpha1*d1[i] + alpha2*d2[i])*a[i]*x[jx];
                }
                jx += incx;
                a += lda;
            }
        } else {          // ...for strided y
            for (int j = 0; j < n; ++j) {
                const int il = ndxmax(0, j - ku);
                const int iu = ndxmin(n, j + klp1);
                int iy = ky;
#ifdef __INTEL_COMPILER
#pragma unroll
#endif
                for (int i = il; i < iu; ++i) {
                    y[iy] += (alpha0 + alpha1*d1[i] + alpha2*d2[i])*a[i]*x[jx];
                    iy += incy;
                }
                jx += incx;
                if (j >= ku) {
                    ky += incy;
                }
                a += lda;
            }
        }

    } else {              // Form y := (alpha0*I+alpha1*D1)*A**T*x + y...

        int jy = ky;
        if (incx == 1) {  // ...for contiguous x
            for (int j = 0; j < n; ++j) {
                const int il = ndxmax(0, j - ku);
                const int iu = ndxmin(n, j + klp1);
                GBIDDMV_SCALAR temp = 0;
                for (int i = il; i < iu; ++i) {
                    temp += a[i]*x[i];
                }
                y[jy] += (alpha0 + alpha1*d1[j] + alpha2*d2[j])*temp;
                jy += incy;
                a += lda;
            }
        } else {          // ...for strided x
            for (int j = 0; j < n; ++j) {
                const int il = ndxmax(0, j - ku);
                const int iu = ndxmin(n, j + klp1);
                GBIDDMV_SCALAR temp = 0;
                int ix = kx;
#ifdef __INTEL_COMPILER
#pragma unroll
#endif
                for (int i = il; i < iu; ++i) {
                    temp += a[i]*x[ix];
                    ix += incx;
                }
                y[jy] += (alpha0 + alpha1*d1[j] + alpha2*d2[j])*temp;
                jy += incy;
                if (j >= ku) {
                    kx += incx;
                }
                a += lda;
            }
        }
    }

    return 0;
}

#undef GBIDDMV_STATIC
#undef GBIDDMV_FUNCTION
#undef GBIDDMV_COMPONENT
#undef GBIDDMV_SCALAR
#undef GBIDDMV_KL
#undef GBIDDMV_KU
