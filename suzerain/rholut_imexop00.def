/** @file
 * Templated functionality used within rholut_imexop00.c
 */

// #include-time parameters available followed by a sample usage.
// Each of these are #undef-ed at the end of this template file
//
// #define FUNCNAME00() /* Function name, e.g. suzerain_rholut_imexop_packc00 */
// #define PACK(x)      /* suzerain_bsmbsm_ ## x ## pack{c,f}                 */

#define LIKELY(expr) SUZERAIN_LIKELY(expr)

void
FUNCNAME00()(
        const complex_double phi,
        const suzerain_rholut_imexop_scenario * const s,
        const suzerain_rholut_imexop_ref      * const r,
        const suzerain_rholut_imexop_refld    * const ld,
        const suzerain_bsplineop_workspace    * const w,
        const int rho_E,
        const int rho_u,
        const int rho_v,
        const int rho_w,
        const int rho,
        complex_double * const buf,
        suzerain_bsmbsm * const A_T,
        complex_double * const patpt,
        const double * const c)
{
    // When you modify this routine, you must also modify
    // suzerain_rholut_imexop_accumulate00 so that operator
    // accumulation-without-assembly and assembly match.  The test cases in
    // tests/test_rholut_imexop00.cpp are invaluable in checking the coherence
    // of these two pieces of logic.
    //
    // When you modify this routine, you may also need to modify
    // rholut_imexop.c and rholut_imexop.def so the non-zero-zero
    // mode case is handled consistently.

    // How many rows and columns of banded submatrices will we build?
    const int nneg = (rho_E >= 0)
                   + (rho_u >= 0) + (rho_v >= 0) + (rho_w >= 0)
                   + (rho   >= 0);

    // Compute the BSMBSM structure and named max_kl, max_ku views of w->D_T.
    *A_T = suzerain_bsmbsm_construct(nneg, w->n, w->max_kl, w->max_ku);
    const double * const M  = w->D_T[0] - (w->max_ku - w->ku[0]);
    const double * const D1 = w->D_T[1] - (w->max_ku - w->ku[1]);
    const double * const D2 = w->D_T[2] - (w->max_ku - w->ku[1]);
    assert(w->nderiv >= 2);         // Enough derivatives in workspace?
    assert(A_T->ld == w->ld);       // Compatible storage?

    // Prepare shorthand for some useful derived values
    const double gm1         = s->gamma - 1;
    const double gm3         = s->gamma - 3;
    const double ap43        = s->alpha + 4.0/3.0;
    const double ap13        = s->alpha + 1.0/3.0;
    const double Ma2         = s->Ma*s->Ma;
    const double invRe       = 1 / s->Re;
    const double invMa2      = 1 / Ma2;
    const double ginvPr      = s->gamma / s->Pr;
    const double ginvRePr    = s->gamma / (s->Re * s->Pr);

    // We do not know the leading dimension associated with the definition of
    // PACK() so we must overwrite every possible submatrix within PATPT.
    // This is only suboptimal for the zero (rho, rho_E) submatrix and
    // brings with it much flexibility.

    // This routine assembles the transpose of the operator and hence the
    // equation indices are transposed in calls to PACK(...)(...) and we right
    // the transpose of the discrete operators by diagonal matrices.

    // The provided buf may contain INFs or NaNs.  Defensively zero it.
    // Also serves to (possibly) bring the buffer into cache for accumulation.
    assert(buf);
    memset(buf, 0, A_T->ld*A_T->n*sizeof(buf[0]));

    // Storage for gathering submatrix phi*L^T indexed on [ rho_E, rho_u,
    // ...]-by-[rho_E, rho_u, ...]' at the "upper" coefficient w->n -
    // 1. Permits later adjusting the accumulated operator to provide
    // NRBC. Zero initialization necessary to handle omitting scalars
    // (e.g. rho).  Notice that a column-major view of this raw data is
    // nothing but phi*L.
    complex_double upper_phi_L_T[5][5] = { { 0 } };

    // Prepare offset to the last element within banded buf, M, D1, and D2
    const int upper = suzerain_gbmatrix_offset(
            A_T->ld, A_T->kl, A_T->ku, A_T->n-1, A_T->n-1);

    // Shorthand for common patterns below
    static const double one = 1.0;
#   define IDENTITY      &one,        0
#   define REF(quantity) r->quantity, ld->quantity
#   define PREAMBLE      'R', A_T->n, A_T->n, A_T->kl, A_T->ku

    if (rho_E >= 0) { // Prepare total energy row

        // On diagonal, mass accumulated last to avoid swamping small values.
        // The factor phi is accounted for in this final mass accumulation.
        /* rho_E */ {
            suzerain_blasext_zgb_diag_scale_acc_d(PREAMBLE,
                    -s->gamma,                   REF(uy),
                    D1, 1, w->ld, 0.0, buf, 1, A_T->ld);

            suzerain_blasext_zgb_diag_scale_acc_d(PREAMBLE,
                    ginvRePr,                    REF(nu),
                    D2, 1, w->ld, 1.0, buf, 1, A_T->ld);

            upper_phi_L_T[0][0] = phi * buf[upper];

            suzerain_blasext_zgb_diag_scale_acc_d(PREAMBLE,
                    1.0,                         IDENTITY,
                    M,  1, w->ld, phi, buf, 1, A_T->ld);

            PACK(z)(A_T, rho_E, rho_E, 1.0, buf, patpt);
        }

        if (rho_u >= 0) {
            suzerain_blasext_zgb_diag_scale_acc_d(PREAMBLE,
                    Ma2*invRe*(1-ginvPr),        REF(nuux),
                    D2, 1, w->ld, 0.0, buf, 1, A_T->ld);

            PACK(z)(A_T, rho_u, rho_E, phi, buf, patpt);

            upper_phi_L_T[1][0] = phi * buf[upper];
        }

        if (rho_v >= 0) {
            suzerain_blasext_zgb_diag_scale_acc_d(PREAMBLE,
                    -1.0,                        REF(e_divm),
                    D1, 1, w->ld, 0.0, buf, 1, A_T->ld);

            suzerain_blasext_zgb_diag_scale_acc_d(PREAMBLE,
                    Ma2*invRe*(ap43-ginvPr),     REF(nuuy),
                    D2, 1, w->ld, 1.0, buf, 1, A_T->ld);

            PACK(z)(A_T, rho_v, rho_E, phi, buf, patpt);

            upper_phi_L_T[2][0] = phi * buf[upper];
        }

        if (rho_w >= 0) {
            suzerain_blasext_zgb_diag_scale_acc_d(PREAMBLE,
                    Ma2*invRe*(1-ginvPr),        REF(nuuz),
                    D2, 1, w->ld, 0.0, buf, 1, A_T->ld);

            PACK(z)(A_T, rho_w, rho_E, phi, buf, patpt);

            upper_phi_L_T[3][0] = phi * buf[upper];
        }

        if (rho  >= 0) {
            suzerain_blasext_zgb_diag_scale_acc_d(PREAMBLE,
                    -1.0,                        REF(ey_gradrho),
                    D1, 1, w->ld, 0.0, buf, 1, A_T->ld);

            suzerain_blasext_zgb_dddiag_scale_acc_d(PREAMBLE,
                    -Ma2*invRe,                  REF(nuu2),
                    -Ma2*invRe*ap13,             REF(nuuyuy),
                    ginvRePr/gm1,                REF(e_deltarho),
                    D2, 1, w->ld, 1.0, buf, 1, A_T->ld);

            PACK(z)(A_T, rho, rho_E, phi, buf, patpt);

            upper_phi_L_T[4][0] = phi * buf[upper];
        }

    }

    if (rho_u >= 0) { // Prepare streamwise momentum row

        if (rho_E >= 0) {
            PACK(zd)(A_T, rho_E, rho_u, 0.0, NULL, patpt);  // Zero fill

            upper_phi_L_T[0][1] = 0.0;
        }

        // On diagonal, mass accumulated last to avoid swamping small values.
        // The factor phi is accounted for in this final mass accumulation.
        /* rho_u */ {
            suzerain_blasext_zgb_diag_scale_acc_d(PREAMBLE,
                    -1.0,                        REF(uy),
                    D1, 1, w->ld, 0.0, buf, 1, A_T->ld);

            suzerain_blasext_zgb_diag_scale_acc_d(PREAMBLE,
                    invRe,                       REF(nu),
                    D2, 1, w->ld, 1.0, buf, 1, A_T->ld);

            upper_phi_L_T[1][1] = phi * buf[upper];

            suzerain_blasext_zgb_diag_scale_acc_d(PREAMBLE,
                    1.0,                         IDENTITY,
                    M,  1, w->ld, phi, buf, 1, A_T->ld);

            PACK(z)(A_T, rho_u, rho_u, 1.0, buf, patpt);
        }

        if (rho_v >= 0) {
            suzerain_blasext_zgb_diag_scale_acc_d(PREAMBLE,
                    -1.0,                        REF(ux),
                    D1, 1, w->ld, 0.0, buf, 1, A_T->ld);

            PACK(z)(A_T, rho_v, rho_u, phi, buf, patpt);

            upper_phi_L_T[2][1] = phi * buf[upper];
        }

        if (rho_w >= 0) {
            PACK(z)(A_T, rho_w, rho_u, 0.0, NULL, patpt);  // Zero fill

            upper_phi_L_T[3][1] = 0.0;
        }

        if (rho  >= 0) {
            suzerain_blasext_zgb_diag_scale_acc_d(PREAMBLE,
                     1.0,                        REF(uxuy),
                    D1, 1, w->ld, 0.0, buf, 1, A_T->ld);

            suzerain_blasext_zgb_diag_scale_acc_d(PREAMBLE,
                    -invRe,                      REF(nuux),
                    D2, 1, w->ld, 1.0, buf, 1, A_T->ld);

            PACK(z)(A_T, rho, rho_u, phi, buf, patpt);

            upper_phi_L_T[4][1] = phi * buf[upper];
        }

    }

    if (rho_v >= 0) { // Prepare wall-normal momentum row

        if (rho_E >= 0) {
            const complex_double coeff = -gm1*invMa2*phi;

            PACK(zd)(A_T, rho_E, rho_v, coeff, D1, patpt);

            upper_phi_L_T[0][2] = coeff * D1[upper];
        }

        if (rho_u >= 0) {
            suzerain_blasext_zgb_diag_scale_acc_d(PREAMBLE,
                    gm1,                  REF(ux),
                    D1, 1, w->ld, 0.0, buf, 1, A_T->ld);

            PACK(z)(A_T, rho_u, rho_v, phi, buf, patpt);

            upper_phi_L_T[1][2] = phi * buf[upper];
        }

        // On diagonal, mass accumulated last to avoid swamping small values.
        // The factor phi is accounted for in this final mass accumulation.
        /* rho_v */ {
            suzerain_blasext_zgb_diag_scale_acc_d(PREAMBLE,
                    gm3,                  REF(uy),
                    D1, 1, w->ld, 0.0, buf, 1, A_T->ld);

            suzerain_blasext_zgb_diag_scale_acc_d(PREAMBLE,
                    ap43*invRe,           REF(nu),
                    D2, 1, w->ld, 1.0, buf, 1, A_T->ld);

            upper_phi_L_T[2][2] = phi * buf[upper];

            suzerain_blasext_zgb_diag_scale_acc_d(PREAMBLE,
                    1.0,                  IDENTITY,
                    M,  1, w->ld, phi, buf, 1, A_T->ld);

            PACK(z)(A_T, rho_v, rho_v, 1.0, buf, patpt);
        }

        if (rho_w >= 0) {
            suzerain_blasext_zgb_diag_scale_acc_d(PREAMBLE,
                    gm1,                  REF(uz),
                    D1, 1, w->ld, 0.0, buf, 1, A_T->ld);

            PACK(z)(A_T, rho_w, rho_v, phi, buf, patpt);

            upper_phi_L_T[3][2] = phi * buf[upper];
        }

        if (rho  >= 0) {
            suzerain_blasext_zgb_ddiag_scale_acc_d(PREAMBLE,
                    -0.5*gm1,             REF(u2),
                     1.0,                 REF(uyuy),
                    D1, 1, w->ld, 0.0, buf, 1, A_T->ld);

            suzerain_blasext_zgb_diag_scale_acc_d(PREAMBLE,
                    -ap43*invRe,          REF(nuuy),
                    D2, 1, w->ld, 1.0, buf, 1, A_T->ld);

            PACK(z)(A_T, rho, rho_v, phi, buf, patpt);

            upper_phi_L_T[4][2] = phi * buf[upper];
        }

    }

    if (rho_w >= 0) { // Prepare spanwise momentum row

        if (rho_E >= 0) {
            PACK(zd)(A_T, rho_E, rho_w, 0.0, NULL, patpt);  // Zero fill

            upper_phi_L_T[0][3] = 0.0;
        }

        if (rho_u >= 0) {
            PACK(z)(A_T, rho_u, rho_w, 0.0, NULL, patpt);   // Zero fill

            upper_phi_L_T[1][3] = 0.0;
        }

        if (rho_v >= 0) {
            suzerain_blasext_zgb_diag_scale_acc_d(PREAMBLE,
                    -1.0,                        REF(uz),
                    D1, 1, w->ld, 0.0, buf, 1, A_T->ld);

            PACK(z)(A_T, rho_v, rho_w, phi, buf, patpt);

            upper_phi_L_T[2][3] = phi * buf[upper];
        }

        // On diagonal, mass accumulated last to avoid swamping small values.
        // The factor phi is accounted for in this final mass accumulation.
        /* rho_w */ {
            suzerain_blasext_zgb_diag_scale_acc_d(PREAMBLE,
                    -1.0,                        REF(uy),
                    D1, 1, w->ld, 0.0, buf, 1, A_T->ld);

            suzerain_blasext_zgb_diag_scale_acc_d(PREAMBLE,
                    invRe,                       REF(nu),
                    D2, 1, w->ld, 1.0, buf, 1, A_T->ld);

            upper_phi_L_T[3][3] = phi * buf[upper];

            suzerain_blasext_zgb_diag_scale_acc_d(PREAMBLE,
                    1.0,                         IDENTITY,
                    M,  1, w->ld, phi, buf, 1, A_T->ld);

            PACK(z)(A_T, rho_w, rho_w, 1.0, buf, patpt);
        }

        if (rho  >= 0) {
            suzerain_blasext_zgb_diag_scale_acc_d(PREAMBLE,
                     1.0,                        REF(uyuz),
                    D1, 1, w->ld, 0.0, buf, 1, A_T->ld);

            suzerain_blasext_zgb_diag_scale_acc_d(PREAMBLE,
                    -invRe,                      REF(nuuz),
                    D2, 1, w->ld, 1.0, buf, 1, A_T->ld);

            PACK(z)(A_T, rho, rho_w, phi, buf, patpt);

            upper_phi_L_T[4][3] = phi * buf[upper];
        }

    }

    if (rho >= 0) {  // Prepare density row

        if (rho_E >= 0) {
            PACK(z)( A_T, rho_E, rho,  0.0, NULL, patpt); // Zero fill

            upper_phi_L_T[0][4] = 0.0;
        }

        if (rho_u >= 0) {
            PACK(zd)(A_T, rho_u, rho,  0.0, NULL, patpt); // Zero fill

            upper_phi_L_T[1][4] = 0.0;
        }

        if (rho_v >= 0) {
            const complex_double coeff = -phi;

            PACK(zd)(A_T, rho_v, rho, coeff, D1,   patpt);

            upper_phi_L_T[2][4] = coeff * D1[upper];
        }

        if (rho_w >= 0) {
            PACK(zd)(A_T, rho_w, rho,  0.0, NULL, patpt); // Zero fill

            upper_phi_L_T[3][4] = 0.0;
        }

        /* rho */ {
            PACK(zd)(A_T, rho,  rho, 1.0, M, patpt);

            upper_phi_L_T[4][4] = 0; // M does not contribute
        }

    }

#   undef IDENTITY
#   undef REF
#   undef PREAMBLE

    // If requested, use matrix c to partially provide upper NRBC
    // TODO Consider inlining the BLAS-like call to hide some memory latency
    // TODO Trim down the line lengths once final version discovered
    if (c) {
        // This column-major usage of upper_phi_L_T is nothing but phi*L.
        complex_double tmp[5][5];
        suzerain_blasext_zgedmm55(-1, c, (const void *) upper_phi_L_T,
                                         (      void *) tmp);

        // Maps indices from tmp into renumbered BSMBSM eqns on upper boundary
        const int up[5] = {
            suzerain_bsmbsm_qinv(A_T->S, A_T->n, rho_E*(1 + A_T->n) - 1),
            suzerain_bsmbsm_qinv(A_T->S, A_T->n, rho_u*(1 + A_T->n) - 1),
            suzerain_bsmbsm_qinv(A_T->S, A_T->n, rho_v*(1 + A_T->n) - 1),
            suzerain_bsmbsm_qinv(A_T->S, A_T->n, rho_w*(1 + A_T->n) - 1),
            suzerain_bsmbsm_qinv(A_T->S, A_T->n, rho  *(1 + A_T->n) - 1),
        };

        // Accumulate modifications into active submatrices within packed storage
        if (LIKELY(rho_E >= 0)) {
            /* rho_E */             patpt[suzerain_gbmatrix_offset(A_T->LD, A_T->KL, A_T->KU, up[rho_E], up[rho_E])] += tmp[0][0];
            if (LIKELY(rho_u >= 0)) patpt[suzerain_gbmatrix_offset(A_T->LD, A_T->KL, A_T->KU, up[rho_u], up[rho_E])] += tmp[1][0];
            if (LIKELY(rho_v >= 0)) patpt[suzerain_gbmatrix_offset(A_T->LD, A_T->KL, A_T->KU, up[rho_v], up[rho_E])] += tmp[2][0];
            if (LIKELY(rho_w >= 0)) patpt[suzerain_gbmatrix_offset(A_T->LD, A_T->KL, A_T->KU, up[rho_w], up[rho_E])] += tmp[3][0];
            if (LIKELY(rho   >= 0)) patpt[suzerain_gbmatrix_offset(A_T->LD, A_T->KL, A_T->KU, up[rho  ], up[rho_E])] += tmp[4][0];
        }
        if (LIKELY(rho_u >= 0)) {
            if (LIKELY(rho_E >= 0)) patpt[suzerain_gbmatrix_offset(A_T->LD, A_T->KL, A_T->KU, up[rho_E], up[rho_u])] += tmp[0][1];
            /* rho_u */             patpt[suzerain_gbmatrix_offset(A_T->LD, A_T->KL, A_T->KU, up[rho_u], up[rho_u])] += tmp[1][1];
            if (LIKELY(rho_v >= 0)) patpt[suzerain_gbmatrix_offset(A_T->LD, A_T->KL, A_T->KU, up[rho_v], up[rho_u])] += tmp[2][1];
            if (LIKELY(rho_w >= 0)) patpt[suzerain_gbmatrix_offset(A_T->LD, A_T->KL, A_T->KU, up[rho_w], up[rho_u])] += tmp[3][1];
            if (LIKELY(rho   >= 0)) patpt[suzerain_gbmatrix_offset(A_T->LD, A_T->KL, A_T->KU, up[rho  ], up[rho_u])] += tmp[4][1];
        }
        if (LIKELY(rho_v >= 0)) {
            if (LIKELY(rho_E >= 0)) patpt[suzerain_gbmatrix_offset(A_T->LD, A_T->KL, A_T->KU, up[rho_E], up[rho_v])] += tmp[0][2];
            if (LIKELY(rho_u >= 0)) patpt[suzerain_gbmatrix_offset(A_T->LD, A_T->KL, A_T->KU, up[rho_u], up[rho_v])] += tmp[1][2];
            /* rho_v */             patpt[suzerain_gbmatrix_offset(A_T->LD, A_T->KL, A_T->KU, up[rho_v], up[rho_v])] += tmp[2][2];
            if (LIKELY(rho_w >= 0)) patpt[suzerain_gbmatrix_offset(A_T->LD, A_T->KL, A_T->KU, up[rho_w], up[rho_v])] += tmp[3][2];
            if (LIKELY(rho   >= 0)) patpt[suzerain_gbmatrix_offset(A_T->LD, A_T->KL, A_T->KU, up[rho  ], up[rho_v])] += tmp[4][2];
        }
        if (LIKELY(rho_w >= 0)) {
            if (LIKELY(rho_E >= 0)) patpt[suzerain_gbmatrix_offset(A_T->LD, A_T->KL, A_T->KU, up[rho_E], up[rho_w])] += tmp[0][3];
            if (LIKELY(rho_u >= 0)) patpt[suzerain_gbmatrix_offset(A_T->LD, A_T->KL, A_T->KU, up[rho_u], up[rho_w])] += tmp[1][3];
            if (LIKELY(rho_v >= 0)) patpt[suzerain_gbmatrix_offset(A_T->LD, A_T->KL, A_T->KU, up[rho_v], up[rho_w])] += tmp[2][3];
            /* rho_w */             patpt[suzerain_gbmatrix_offset(A_T->LD, A_T->KL, A_T->KU, up[rho_w], up[rho_w])] += tmp[3][3];
            if (LIKELY(rho   >= 0)) patpt[suzerain_gbmatrix_offset(A_T->LD, A_T->KL, A_T->KU, up[rho  ], up[rho_w])] += tmp[4][3];
        }
        if (LIKELY(rho   >= 0)) {
            if (LIKELY(rho_E >= 0)) patpt[suzerain_gbmatrix_offset(A_T->LD, A_T->KL, A_T->KU, up[rho_E], up[rho  ])] += tmp[0][4];
            if (LIKELY(rho_u >= 0)) patpt[suzerain_gbmatrix_offset(A_T->LD, A_T->KL, A_T->KU, up[rho_u], up[rho  ])] += tmp[1][4];
            if (LIKELY(rho_v >= 0)) patpt[suzerain_gbmatrix_offset(A_T->LD, A_T->KL, A_T->KU, up[rho_v], up[rho  ])] += tmp[2][4];
            if (LIKELY(rho_w >= 0)) patpt[suzerain_gbmatrix_offset(A_T->LD, A_T->KL, A_T->KU, up[rho_w], up[rho  ])] += tmp[3][4];
            /* rho */               patpt[suzerain_gbmatrix_offset(A_T->LD, A_T->KL, A_T->KU, up[rho  ], up[rho  ])] += tmp[4][4];
        }

    }
}

#undef LIKELY

#undef FUNCNAME00
#undef PACK

