// #include-time parameters available followed by a sample usage.
// Each of these are #undef-ed at the end of this template file
//
// #define GBMV_STATIC    /*empty*/         /* Use for static function          */
// #define GBMV_FUNCTION  dgbmv             /* Function name                    */
// #define GBMV_COMPONENT double            /* Type of matrix A                 */
// #define GBMV_SCALAR    double            /* Type of coefficients and vectors */
// #define GBMV_KL        const int kl,     /* Matrix lower bandwidth           */
// #define GBMV_KU        const int ku,     /* Matrix upper bandwidth           */
// #define GBMV_LDA       const int lda,    /* Matrix leading dimension         */

#ifndef __GBMV_INTERNAL_ONCE
#define __GBMV_INTERNAL_ONCE
static inline int ndxmin(int a, int b) { return a < b ? a : b; }
static inline int ndxmax(int a, int b) { return a > b ? a : b; }
#endif /* __GBMV_INTERNAL_ONCE */

GBMV_STATIC int GBMV_FUNCTION(
    char trans, const int m, const int n, GBMV_KL GBMV_KU
    const GBMV_SCALAR alpha, const GBMV_COMPONENT * restrict a, GBMV_LDA
                             const    GBMV_SCALAR * restrict x, const int incx,
    const GBMV_SCALAR beta,           GBMV_SCALAR * restrict y, const int incy)
{
    // Logic from http://www.netlib.org/blas/dgbmv.f and subsequently revised
    trans = toupper(trans);  // Simplifies case-insensitive checks

    // Test the input parameters
    if (trans != 'N' && trans != 'T' && trans != 'C') {
        return 1;
    } else if (m < 0) {
        return 2;
    } else if (n < 0) {
        return 3;
    } else if (kl < 0) {
        return 4;
    } else if (ku < 0) {
        return 5;
    } else if (lda < kl + ku + 1) {
        return 8;
    } else if (incx == 0) {
        return 10;
    } else if (incy == 0) {
        return 13;
    }

    // Quick return if possible
    if (m == 0 || n == 0 || (alpha == 0 && beta == 1)) {
        return 0;
    }

    // Set the lengths of the vectors x and y.
    const int lenx = trans == 'N' ? n : m;
    const int leny = trans == 'N' ? m : n;

    // Start the operations. In this version the elements of A are accessed
    // sequentially with one pass through the band part of A.

    // First form y := beta*y (ignoring the irrelevant incy sign)...
    if (beta != 1) {
        const int abs_incy = abs(incy);
        if (abs_incy == 1) {  // ...for contiguous y
            if (beta == 0) {
                memset(y, 0, leny * sizeof(y[0]));
            } else {
                for (int i = 0; i < leny; ++i) {
                    y[i] *= beta;
                }
            }
        } else {              // ...for strided y
            if (beta == 0) {
                for (int i = 0; i < leny; ++i) {
                    y[i*abs_incy] = 0;
                }
            } else {
                for (int i = 0; i < leny; ++i) {
                    y[i*abs_incy] *= beta;
                }
            }
        }
    }

    // Quick return when the matrix used is irrelevant
    if (alpha == 0) {
        return 0;
    }

    // Set up the start points in x and y.
    int kx = incx > 0 ? 0 : incx*(1 - lenx) ;
    int ky = incy > 0 ? 0 : incy*(1 - leny) ;

    // Banded matrix dereference is always of form a[ku - j + i + j*lda]
    // so incorporate the contant ku offset once and for all.  Below
    // we also define j-dependent pointers aj to handle -j + j*lda offset.
    a += ku;

    // Perform the banded matrix-vector accumulation
    if (trans == 'N') {   // Form y := alpha*A*x + y...

        int jx = kx;
        if (incy == 1) {  // ...for contiguous y
            for (int j = 0; j < n; ++j) {
                const GBMV_COMPONENT * const aj = a + j*(lda - 1);
                const GBMV_SCALAR temp = alpha*x[jx];
                for (int i = ndxmax(0, j-ku); i < ndxmin(m, j+kl+1); ++i) {
                    y[i] += temp*aj[i];
                }
                jx += incx;
            }
        } else {          // ...for strided y
            for (int j = 0; j < n; ++j) {
                const GBMV_COMPONENT * const aj = a + j*(lda - 1);
                const GBMV_SCALAR temp = alpha*x[jx];
                int iy = ky;
                for (int i = ndxmax(0, j-ku); i < ndxmin(m, j+kl+1); ++i) {
                    y[iy] += temp*aj[i];
                    iy += incy;
                }
                jx += incx;
                if (j > ku - 1) {
                    ky += incy;
                }
            }
        }

    } else {              // Form y := alpha*A**T*x + y...

        int jy = ky;
        if (incx == 1) {  // ...for contiguous x
            for (int j = 0; j < n; ++j) {
                const GBMV_COMPONENT * const aj = a + j*(lda - 1);
                GBMV_SCALAR temp = 0;
                for (int i = ndxmax(0, j-ku); i < ndxmin(m, j+kl+1); ++i) {
                    temp += aj[i]*x[i];
                }
                y[jy] += alpha * temp;
                jy += incy;
            }
        } else {          // ...for strided x
            for (int j = 0; j < n; ++j) {
                const GBMV_COMPONENT * const aj = a + j*(lda - 1);
                GBMV_SCALAR temp = 0;
                int ix = kx;
                for (int i = ndxmax(0, j-ku); i < ndxmin(m, j+kl+1); ++i) {
                    temp += aj[i]*x[ix];
                    ix += incx;
                }
                y[jy] += alpha*temp;
                jy += incy;
                if (j > ku - 1) {
                    kx += incx;
                }
            }
        }
    }

    return 0;
}

#undef GBMV_STATIC
#undef GBMV_FUNCTION
#undef GBMV_COMPONENT
#undef GBMV_SCALAR
#undef GBMV_KL
#undef GBMV_KU
#undef GBMV_LDA
