#ifndef LARGO_VERSION_H
#define LARGO_VERSION_H

/** @file
 * Provides largo version information.
 */

/** Provides largo's major version number */
#define LARGO_MAJOR_VERSION @AX_MAJOR_VERSION@

/** Provides largo's minor version number */
#define LARGO_MINOR_VERSION @AX_MINOR_VERSION@

/** Provides largo's point version number */
#define LARGO_POINT_VERSION @AX_POINT_VERSION@

/**
 * Provides a composite major.minor.point version number
 * suitable for preprocessor integer comparison.
 */
#define LARGO_VERSION (  LARGO_MAJOR_VERSION * 100000  \
                       + LARGO_MINOR_VERSION *    100  \
                       + LARGO_POINT_VERSION *      1)

#endif /*LARGO_VERSION_H*/
